import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);

    double avg=0.0;
    double num;
    int count=0;
    while (true){
    num =sc.nextDouble();
    if (num==0)
      break;
    if (num>0.0){
      avg+=num;
      count++;
    }
    }
    if (avg>0)
    System.out.println(avg/count);
    else if (avg==0)
    System.out.println(0.0);
    sc.close();
  }
}
